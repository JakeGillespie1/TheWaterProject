@{
}
@model Project
<div class="card m-1 p-1">
    <h4>
        @Model.projectName
        <span class="badge rounded-pill bg-primary text-white float-end"><small>@Model.projectImpact served</small></span>
    </h4>
    <ul>
        <li>Project Type: @Model.projectType</li>
        <li>Project Name: @Model.projectName</li>
        <li>Installation Date: @Model.projectInstallation</li>
        <li>Project Phase: @Model.projectPhase</li>
    </ul>

    <form id="@Model.projectId" metehod="post" asp-page="/Cart">
        <input type="hidden" asp-for="@Model.projectId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <button type="submit" class="btn btn-outline-success rounded-pill text-black float-end">Donate</button>
    </form>
</div>